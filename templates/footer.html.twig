<footer id="contact">
{# <span id="goUp">
   <a href="#page-top">
      Up <i class="fas fa-arrow-up"></i>
   </a>
</span> #}
   <div class="contact-container">
      <div class="col-formulaire">
         <p>Une question ?</p>
            <div class="container">
                  {{ form_start(formContact) }}
                  {{ form_row(formContact.nom) }}
                  {{ form_row(formContact.email) }}
                  {{ form_row(formContact.objet) }}
                  {{ form_row(formContact.message) }}

                  <input type="submit" value="Envoyer">
                     {{ form_end(formContact) }}
                     {% for message in app.flashes('success_mail_sent') %}
                        <div class="alert alert-success mt-4" role="alert">{{ message}}
                           <button type="button" class="close" data-dismiss="success" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                           </button>
                        </div>

                     {% endfor %}

                     {% if not formContact.vars.valid %}
                        <div class="alert alert-danger mt-4" role="alert">Erreur
                           <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                           </button>
                        </div>
                     {% endif %}
                     

            </div>
      </div>

      <div class="col-services">
